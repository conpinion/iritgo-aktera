		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<configuration>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>native2ascii-maven-plugin</artifactId>
				<version>1.0-alpha-1</version>
				<executions>
					<execution>
						<goals>
							<goal>native2ascii</goal>
						</goals>
						<configuration>
							<src>${basedir}/src/main/resources</src>
							<dest>${project.build.outputDirectory}</dest>
							<includes>**/*.properties</includes>
							<encoding>UTF-8</encoding>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>xdoclet-maven-plugin</artifactId>
				<version>1.0-alpha-2-iritgo</version>
				<executions>
					<execution>
						<id>xdoclet</id>
						<phase>compile</phase>
						<goals>
							<goal>xdoclet</goal>
						</goals>
						<configuration>
							<tasks>
								<property name="xdoclet.gen.dir" value="/tmp/iritgo-xdoclet-generated" />
								<mkdir dir="${basedir}/target/classes" />
								<delete dir="${xdoclet.gen.dir}" />
								<mkdir dir="${xdoclet.gen.dir}" />
								<taskdef name="modeldoclet" classname="xdoclet.modules.model.ModelDocletTask" classpathref="maven.dependency.classpath" />
								<modeldoclet excludedTags="@version,@author,@todo,@see" addedTags="@xdoclet-generated at ${TODAY},@author XDoclet,@version ${version}"
									verbose="false" destDir="${xdoclet.gen.dir}" force="false">
									<model version="2.0" />
									<fileset dir="${basedir}/src/main/java">
										<include name="**/*.java" />
										<contains text="@model.model" />
									</fileset>
								</modeldoclet>
								<taskdef name="persistdoclet" classname="xdoclet.modules.persist.PersistDocletTask" classpathref="maven.dependency.classpath" />
								<persistdoclet excludedTags="@version,@author,@todo,@see" addedTags="@xdoclet-generated At ${TODAY},@author XDoclet,@version ${version}"
									verbose="false" destDir="${xdoclet.gen.dir}" force="false">
									<persist version="2.0" />
									<fileset dir="${basedir}/src/main/java">
										<include name="**/*.java" />
										<contains text="@persist.persistent" />
									</fileset>
								</persistdoclet>
								<taskdef name="collect-metainfo" classname="org.apache.avalon.fortress.tools.ComponentMetaInfoCollector"
									classpathref="maven.dependency.classpath" />
								<collect-metainfo destdir="${basedir}/target/classes">
									<fileset dir="${basedir}/src/main/java">
										<include name="**/*.java" />
										<contains text="@avalon.component" />
									</fileset>
								</collect-metainfo>
								<copy todir="${project.build.outputDirectory}/conf/gen" flatten="true" overwrite="${copy.overwrite}">
									<fileset dir="${xdoclet.gen.dir}">
										<include name="**/*.*" />
									</fileset>
								</copy>
								<copy todir="${project.build.outputDirectory}" flatten="false" overwrite="${copy.overwrite}">
									<fileset dir="${xdoclet.gen.dir}">
										<include name="**/*.*" />
									</fileset>
								</copy>
								<delete dir="${xdoclet.gen.dir}" />
							</tasks>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>xdoclet</groupId>
						<artifactId>xdoclet-model-module</artifactId>
						<version>1.2.3</version>
					</dependency>
					<dependency>

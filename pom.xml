						<artifactId>xdoclet-persist-module</artifactId>
						<version>1.2.3</version>
					</dependency>
					<dependency>
						<groupId>xdoclet</groupId>
						<artifactId>xdoclet-hibernate-module</artifactId>
						<version>1.2.3</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>

<?xml version='1.0' encoding='utf-8'?> <!DOCTYPE hibernate-configuration
PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.url">jdbc:postgresql:iritgo</property>
		<property name="hibernate.connection.username">iritgo</property>
		<property name="hibernate.connection.password">iritgo</property>

		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.use_sql_comments">true</property>

		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

		<mapping class="de.iritgo.aktera.address.entity.Address" />
		<mapping class="de.iritgo.aktera.address.entity.PhoneNumber" />

	</session-factory>
</hibernate-configuration>
